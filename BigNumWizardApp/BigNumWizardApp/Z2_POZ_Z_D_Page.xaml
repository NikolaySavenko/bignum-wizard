<Page
    x:Class="BigNumWizardApp.Z2_POZ_Z_D_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BigNumWizardApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название модуля" 
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       Margin="58,24,0,0"
                       FontSize="24"
                       FontFamily="Arial"
                       CharacterSpacing="200"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBox  x:Name="numberBox" Header="Enter your num:" PlaceholderText="0" Margin="10"/>
            <TextBox x:Name="textBox" Text="Тут будет ответ"
             IsReadOnly="True"
            FontFamily="Arial" FontSize="24" FontStyle="Italic"
            CharacterSpacing="200" Foreground="CornflowerBlue" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
